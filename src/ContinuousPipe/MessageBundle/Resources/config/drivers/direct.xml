<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="continuouspipe.message.direct.message_producer" class="ContinuousPipe\Message\Direct\FromProducerToConsumer">
            <argument type="service" id="continuouspipe.message.message_consumer" />
        </service>

        <service id="continuouspipe.message.message_puller" class="ContinuousPipe\Message\InMemory\ArrayMessagePuller" />
        <service id="continuouspipe.message.message_producer" alias="continuouspipe.message.direct.message_producer" />
    </services>
</container>
